# ------------------------------------------------------------------------------
# Core App Mode
# ------------------------------------------------------------------------------
# Use DEV for local development. Any other value is treated as non-dev/prod mode.
ENV=DEV
# Optional tunnel origin allowed only in DEV mode (next.config.ts)
NEXT_ALLOWED_DEV_ORIGIN=https://your-ngrok-or-tunnel-origin.example

# ------------------------------------------------------------------------------
# Authentication
# ------------------------------------------------------------------------------
# Public/base URL for Better Auth client
BETTER_AUTH_URL=http://localhost:3000
# Strong random secret for Better Auth signing/encryption
BETTER_AUTH_SECRET=replace_with_long_random_secret

# Google OAuth credentials
GOOGLE_CLIENT_ID=replace_with_google_client_id
GOOGLE_CLIENT_SECRET=replace_with_google_client_secret

# ------------------------------------------------------------------------------
# DigitalOcean OAuth
# ------------------------------------------------------------------------------
DIGITALOCEAN_CLIENT_ID=replace_with_digitalocean_client_id
DIGITALOCEAN_CLIENT_SECRET=replace_with_digitalocean_client_secret
DIGITALOCEAN_REDIRECT_URI=http://localhost:3000/api/integrations/digitalocean/callback
# Optional. Defaults to "read write" in code if omitted.
DIGITALOCEAN_OAUTH_SCOPE=read write

# The server will send a message after setting up the ClawBot to this URL to confirm whether it is up and running. This URL will be passed in userData within /api/deploy -> UserData
DEPLOYMENT_CHECK=https://your-public-app-domain.example

# ------------------------------------------------------------------------------
# Database (Local)
# ------------------------------------------------------------------------------
LOCAL_DB_URL=postgresql://user:password@localhost:5432/agentdaddie

# ------------------------------------------------------------------------------
# Database (Production / Non-DEV)
# ------------------------------------------------------------------------------
PROD_DB_USER=replace_with_prod_db_user
PROD_DB_PASSWORD=replace_with_prod_db_password
PROD_DB_HOST=replace_with_prod_db_host
PROD_DB_PORT=5432
PROD_DB_DATABASE=replace_with_prod_db_name

# PEM CA certificate (single-line escaped or multiline, based on your env loader)
PROD_DB_CA="-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----"
